<h1 class='body_title'>Edit a Contact</h1>

<form action='/contacts/<%= @contact.id %>' method='post'>
	<input type='hidden' name='_method' value='put'>
	<input type='text' name='first_name' value='<%= @contact.first_name %>'><br /><br />
	<input type='text' name='last_name' value='<%= @contact.last_name %>'><br /><br />
	<input type='text' name='email' value='<%= @contact.email %>'><br /><br />
	<input type='text' name='note' value='<%= @contact.note %>'><br /><br />
	<input type='submit' value='Edit Contact'>
</form>
